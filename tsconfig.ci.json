{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["client", "vite.config.ts", "drizzle.config.ts", "node_modules", "dist"]
}
